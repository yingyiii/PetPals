<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetPals_Pet_CareService_App.LoginPage"
             Title=""
              WidthRequest="380"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#FFFFFF">

    <Grid Padding="40">
        <!-- Circle Background -->
        <BoxView Color="#9D5C63"
                CornerRadius="300" 
                 Margin="0,70,0,0"
            WidthRequest="300"       
            HeightRequest="300"
            HorizontalOptions="Center"
                VerticalOptions="StartAndExpand"/>
            
        <VerticalStackLayout >
        <Label Text="PetPals" 
               Margin="0,150,0,0"
               FontSize="85" 
               TextColor="#000000" 
               FontFamily="Marcellus SC" 
               HorizontalTextAlignment="Center" />
        <Label Text="Bridging Hearts, Paws, and Homes" 
               FontSize="Micro" 
               FontAttributes="Bold"
               TextColor="#000000" 
               FontFamily="Inter" 
               HorizontalTextAlignment="Center" />
        <Entry x:Name="EmailEntry"
               Text="{Binding EmailAddress}" 
               Placeholder="Email Address" 
               FontFamily="Inter"
               Margin="0,120,0,0"
               HorizontalTextAlignment="Center"
               TextColor="#000000" />
        <BoxView HeightRequest="1" 
                 BackgroundColor="#000000" 
                 HorizontalOptions="FillAndExpand" 
                 Margin="30,0,30,0"/>

        <Entry x:Name="PasswordEntry"
               Text="{Binding Password}" 
               HorizontalTextAlignment="Center"
               FontFamily="Inter"
               IsPassword="True" 
               Placeholder="Password" 
               TextColor="#000000"/>
        <BoxView HeightRequest="1" 
                 BackgroundColor="#000000" 
                 HorizontalOptions="FillAndExpand" 
                 Margin="30,0,30,0"/>

     
            <Grid ColumnDefinitions="*,*" RowDefinitions="*">
                <Label Text="Create Account" 
               Grid.Row="0" Grid.Column="0"
               BackgroundColor="Transparent"
               Margin="20,8,0,0"
               HorizontalOptions="Center"
               TextColor="#E0AFA0"
               FontFamily="Inter"
               TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCreateAccountClicked" />
                    </Label.GestureRecognizers>
                </Label>

                <Label Text="Forgot Password?" 
               Grid.Row="0" Grid.Column="1"
               BackgroundColor="Transparent"
               Margin="0,8,30,80"
               HorizontalOptions="Center"
               TextColor="#E0AFA0"
               FontFamily="Inter"
               TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnForgotPasswordClicked" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>
    

        <Button Text="Login" 
                FontSize="13"
                Clicked="OnLoginClicked" 
                BackgroundColor="#E4BB97" 
                TextColor="Black"
                WidthRequest="80" 
                HorizontalOptions="Center"/>
        
    </VerticalStackLayout>
    </Grid>
</ContentPage>